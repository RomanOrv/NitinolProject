@model NitinolProject.Web.Models.Metal.MetalTypeModel

@{
    ViewBag.Title = "AddMetalType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center;">Редагування виду металу</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <hr />

        @Html.EditorFor(model => model)

        <div class="form-group">
            <div class="col-md-offset-5 col-md-7">
                <input type="submit" value="Редагувати" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/metal/metaltypes" class="btn btn-primary">Повернутися до списку видів металів</a>
</div>
