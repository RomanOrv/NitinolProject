@model NitinolProject.Web.Models.Metal.MetalSampleModel

@{
    ViewBag.Title = "AddMetalSample";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string metalTypeName = Convert.ToString(ViewBag.MetalTypeName);
}
@*<style>
    label {
        text-align: left !important;
    }
</style>*@

<h2 style="text-align: center;">Додання зразку металу : @metalTypeName.ToLower()</h2>

@using (Html.BeginForm("AddMetalSample", "Metal", FormMethod.Post, new { id = "add_metal_form", enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <hr />
        @Html.EditorFor(model => model)
        <div class="form-group">
            <div class="col-md-offset-5 col-md-7">
                <input type="submit" value="Створити" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/metal/metaltypesamples?metalType=@Model.MetalId" class="btn btn-primary">Повернутися до списку зразків металу</a>
</div>

