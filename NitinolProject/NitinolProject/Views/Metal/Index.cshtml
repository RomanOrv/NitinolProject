              })
              .Pageable()
              .HtmlAttributes(new {style = "margin-bottom: 15px;"})
              .DataSource(dataSource => dataSource
                  .Ajax()
                  .PageSize(5)
                  .ServerOperation(true)
                  .Read(read => read.Action("GetMetalTypes", "Metal"))
