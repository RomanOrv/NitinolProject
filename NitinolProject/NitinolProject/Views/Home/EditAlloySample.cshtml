@model NitinolProject.Web.Models.Alloy.NicelideTitanumSampleModel

@{
    ViewBag.Title = "AddAlloySample";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center;">Редагування зразку сплаву</h2>


@using (Html.BeginForm("EditAlloySample", "Home", FormMethod.Post, new { id = "add_metal_form", enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <hr />
        @Html.EditorFor(model => model)
        <div class="form-group">
            <div class="col-md-offset-5 col-md-7">
                <input type="submit" value="Редагувати" class="btn btn-success" />
            </div>
        </div>
    </div>
}


<div>
    <a href="/home/index" class="btn btn-primary">Повернутися до списку сплавів</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
